generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Workflow {
  id          String  @id @default(cuid())
  userid      String
  name        String
  description String?

  definition String
  status     String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  execution WorkflowExecution[]

  @@unique([userid, name])
}

model WorkflowExecution {
  id         String    @id @default(cuid())
  workflowId String
  userid     String
  trigger    String
  status     String
  createAt   DateTime  @default(now())
  startAt    DateTime?
  completeAt DateTime?

  workflow Workflow        @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  phase    ExectionPhase[]
}

model ExectionPhase {
  id         String    @id @default(cuid())
  userid     String
  status     String
  number     Int
  node       String
  name       String
  startAt    DateTime?
  completeAt DateTime?
  inputs     String?
  outputs    String?

  creditsCost Int?

  workflowExectionId String
  exection           WorkflowExecution @relation(fields: [workflowExectionId], references: [id], onDelete: Cascade)
}
